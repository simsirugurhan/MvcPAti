<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pati Dostu</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&family=Sono:wght@200;300;400;500;700&display=swap"
          rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <link href="~/Content/css/templatemo-pod-talk.css" rel="stylesheet">
    <style>
        #foter {
            margin-left: 80px;
        }

        #custom-logo-footer {
            width: 300px;
            height: auto;
            margin-top: -80px;
        }

        .site-footer-link {
            font-size: 18px;
            font-weight: bold;
        }
    </style>

    @RenderSection("styles", required: false)
</head>
<body>
    <main>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand me-lg-5 me-0" href="@Url.Action("Index", "Home")">
                    <img src="~/Content/images/patidostulogo.png" class="logo-image img-fluid" id="custom-logo" alt="template pati dostu">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-lg-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Home")">Anasayfa</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link " href="@Url.Action("Index","Veteriner")">Veterİner</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarLightDropdownMenuLink" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">İlanlar</a>

                            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarLightDropdownMenuLink">
                                <li><a class="dropdown-item" href="@Url.Action("Sahiplendirme","Ilanlar")">Sahİplendİrme</a></li>

                                <li><a class="dropdown-item" href="@Url.Action("Kayip","Ilanlar")">Kayıp </a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link" href="@Url.Action("Index","Oteller")">Oteller</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Iletisim","Home")">İLETİŞİM</a>
                        </li>
                    </ul>

                    @if (Session["KullaniciId"] != null)
                    {
                        <div class="ms-4">
                            <a href="@Url.Action("Index","Profil")" class="btn custom-btn custom-border-btn smoothscroll">Profil</a>
                        </div>
                    }
                    else
                    {
                        <div class="ms-4">
                            <a href="@Url.Action("Index","Login")" class="btn custom-btn custom-border-btn smoothscroll">Giriş Yap</a>
                        </div>
                    }
                </div>
            </div>
        </nav>

        <div>
            @RenderBody()
        </div>

    </main>
    <footer class="site-footer">
        <div class="container">
            <div class="row" id="foter">
                <div class="col-lg-3 col-md-6 col-12 mb-4">
                    <h3 class="site-footer-title mb-3">İletişim</h3>
                    <p class="mb-2"><strong class="d-inline me-2">Telefon:</strong> 0 545 445 47 47</p>
                    <p>
                        <strong class="d-inline me-2">Email:</strong>
                        <a href="mailto:patidostu@gmail.com">patidostu@gmail.com</a>
                    </p>
                </div>

                <div class="col-lg-3 col-md-6 col-12 mb-5">
                    <h3 class="site-footer-title mb-3">Sosyal Medya</h3>
                    <ul class="social-icon">
                        <li class="social-icon-item">
                            <a href="#" class="social-icon-link bi-instagram"></a>
                        </li>
                        <li class="social-icon-item">
                            <a href="#" class="social-icon-link bi-twitter"></a>
                        </li>
                        <li class="social-icon-item">
                            <a href="#" class="social-icon-link bi-whatsapp"></a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-6 col-md-12 col-12">
                    <a class="navbar-brand me-lg-5 me-0 pt-0" href="index.html">
                        <img src="~/Content/images/patidostulogo.png" class="logo-image img-fluid" id="custom-logo-footer" alt="template pati dostu">
                    </a>
                </div>
            </div>
        </div>


    </footer>

    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/custom.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

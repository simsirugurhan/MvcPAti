@{
    ViewBag.Title = "Anasayfa";
}

@{
    var ilanlar = Patici.Manager.IlanManager.GetKayipIlanlar();
}

@if (ilanlar.Count > 0)
{
    <section class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-12">
                    <div class="text-center mb-5 pb-2">
                        <h1 class="text-white">Kayıp İlanları</h1>
                    </div>
                    @foreach (var i in ilanlar)
                    {
                        var galeri = Patici.Manager.IlanManager.GetHayvanGaleriFromIlan(i.Id);
                        <div class="owl-carousel owl-theme">
                            <div class="owl-carousel-info-wrap item">
                                <img src="@galeri.First().Foto" class="owl-carousel-image img-fluid">
                                <div class="owl-carousel-info">
                                    <h4 class="mb-2">
                                        @i.Hayvan.Ad
                                    </h4>
                                    <span class="badge">@i.KullaniciDetay.Kullanici.Sehir.Ad</span>
                                    <span class="badge">@i.KullaniciDetay.Kullanici.Telefon</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
}

<div class="marketing_section layout_padding">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="row">
                <div class="col-md-6">
                    <div class="job_section">
                        <h1 class="jobs_text">Kayıp İlanları</h1>
                        <p class="dummy_text">Kayıp olan patili dostlarımızı bulmamıza yardımcı olun</p>
                        <div class="apply_bt"><a href="@Url.Action("Kayip","Ilanlar")">Kayıp ilanları</a></div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="image_1 padding_0"><img src="~/Content/images/kedi_kopek.jpg"></div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="marketing_section layout_padding">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="image_1 padding_0"><img src="~/Content/images/kedi-kopek-alistirma-2.jpg"></div>
            </div>
            <div class="col-md-6">
                <div class="job_section_2">
                    <h1 class="jobs_text">Sahiplendirme İlanları</h1>
                    <p class="dummy_text">Sahiplendirilecek dostlarımıza yardımcı olun</p>
                    <div class="apply_bt"><a href="@Url.Action("Sahiplendirme","Ilanlar")">Sahiplendirme ilanları</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="marketing_section layout_padding">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="job_section">
                    <h1 class="jobs_text">Oteller</h1>
                    <p class="dummy_text">Evcil dostlarımızı en iyi şekilde misafir edecek otelleri görün</p>
                    </p>
                    <div class="apply_bt"><a href="@Url.Action("Index","Oteller")">Kedi Otelleri</a></div>
                    <div class="apply_bt"><a href="@Url.Action("Index","Oteller")">Köpek Otelleri</a></div>

                </div>
            </div>
            <div class="col-md-6 padding_0">
                <div class="image_1"><img src="~/Content/images/dog-and-cat3.jpg"></div>
            </div>
        </div>
    </div>
</div>

<div class="marketing_section layout_padding">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 padding_0">
                <div class="image_1"><img src="~/Content/images/vetkedikopek.jpg"></div>
            </div>
            <div class="col-md-6">
                <div class="job_section_2">
                    <h1 class="jobs_text">Veterinerlerimiz</h1>
                    <p class="dummy_text">Evcil dostlarımızın sağlığını önemsiyoruz.Bu nedenle veterinerlerimize bakabilirsiniz.</p>
                    <div class="apply_bt"><a href="@Url.Action("Index","Veteriner")">Veterinerlerimiz</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    var patiler = Patici.Manager.IlanManager.GetSahiplendirmeIlanlar();
}

@if (patiler.Count > 0)
{
    <section class="topics-section section-padding pb-0" id="section_3">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-12">
                    <div class="section-title-wrap mb-5 mt-5">
                        <h4 class="section-title">Pati İlanları</h4>
                    </div>
                </div>
                @foreach (var p in patiler)
                {
                    var galeri = Patici.Manager.IlanManager.GetHayvanGaleriFromIlan(p.Id);
                    <div class="col-lg-3 col-md-6 col-12 mb-4 mb-lg-0">
                        <div class="custom-block custom-block-overlay">
                            <a href="@Url.Action("IlanDetay","Ilanlar", new {ilanId = p.Id})" class="custom-block-image-wrap">
                                <img src="@galeri.First().Foto"
                                     class="custom-block-image img-fluid" alt="">
                            </a>
                            <div class="custom-block-info custom-block-overlay-info">
                                <h5 class="mb-1">
                                    <a href="@Url.Action("IlanDetay","Ilanlar", new {ilanId = p.Id})">
                                        @p.Hayvan.Ad
                                    </a>
                                </h5>
                                <p> @p.Hayvan.Aciklama</p>
                                <p class="badge mb-0"> @p.KullaniciDetay.Kullanici.Sehir.Ad</p>
                                <p class="badge mb-0">@p.KullaniciDetay.Kullanici.Telefon</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
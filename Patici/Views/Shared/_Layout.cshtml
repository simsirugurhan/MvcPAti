<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pati Dostu</title>
    @*Styles.Render("~/Content/css")*@
    @*Scripts.Render("~/bundles/modernizr")*@
    <!-- CSS FILES -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&family=Sono:wght@200;300;400;500;700&display=swap"
          rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <link href="~/Content/css/templatemo-pod-talk.css" rel="stylesheet">
    @RenderSection("styles", required: false)
</head>
<body>
    <main>
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-lg-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","Home")">Anasayfa</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link " href="@Url.Action("Index","Veteriner")">Veterİner</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarLightDropdownMenuLink" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">İlanlar</a>

                            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarLightDropdownMenuLink">
                                <li><a class="dropdown-item" href="@Url.Action("Sahiplendirme","Ilanlar")">Sahİplendİrme</a></li>

                                <li><a class="dropdown-item" href="@Url.Action("Kayip","Ilanlar")">Kayıp </a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link" href="@Url.Action("Index","Oteller")">Oteller</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Iletisim","Home")">İLETİŞİM</a>
                        </li>
                    </ul>

                    @if (Session["KullaniciId"] != null)
                    {
                        <div class="ms-4">
                            <a href="@Url.Action("Index","Profil")" class="btn custom-btn custom-border-btn smoothscroll">Profil</a>
                        </div>
                    }
                    else
                    {
                        <div class="ms-4">
                            <a href="@Url.Action("Index","Login")" class="btn custom-btn custom-border-btn smoothscroll">Giriş Yap</a>
                        </div>
                    }
                </div>
            </div>
        </nav>

        <div>
            @RenderBody()
        </div>

    </main>
    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-12 mb-5 mb-lg-0">
                </div>
                <div class="col-lg-3 col-md-6 col-12">
                    <div class="site-footer-thumb mb-4 pb-2">
                        <div class="d-flex flex-wrap">

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container pt-5">
            <div class="row align-items-center">
                <div class="col-lg-2 col-md-3 col-12">
                </div>
                <div class="col-lg-7 col-md-9 col-12">
                    <ul class="site-footer-links">
                        <li class="site-footer-link-item">
                            <a href="#" class="site-footer-link">Homepage</a>
                        </li>
                        <li class="site-footer-link-item">
                            <a href="#" class="site-footer-link">Help Center</a>
                        </li>
                        <li class="site-footer-link-item">
                            <a href="#" class="site-footer-link">Contact Us</a>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3 col-12">
                    <p class="copyright-text mb-0">
                        &copy; @DateTime.Now.Year - Pati Dostu
                </div>
            </div>
        </div>
    </footer>

    <!-- JAVASCRIPT FILES -->
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/custom.js"></script>

    @*Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
